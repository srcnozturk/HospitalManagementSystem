@model HospitalManagementSystem.Models.Patient
@{
    ViewBag.Title = "Edit";
}
<h2>Edit Patient</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model=> model.PatientId)
    <div class="form-horizontal">
         <div class="form-group">
            @Html.LabelFor(model => model.PatientFirstName,htmlAttributes: new{@class="col-md-2"})
            <div class="">

                @Html.EditorFor(model => model.PatientFirstName, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PatientLastName, htmlAttributes: new { @class = "col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.PatientLastName, new { @class="form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PatientInsurance, htmlAttributes: new { @class = "col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.PatientInsurance, new { @class="form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PatientAddress, htmlAttributes: new { @class = "col-md-2" })
            <div class="">
                @Html.TextAreaFor(model => model.PatientAddress,htmlAttributes: new { @class="form-control",@rows="2",@cols="10"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PatientPhone, htmlAttributes: new { @class = "col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.PatientPhone, new { @class="form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input id="submit" class="btn btn-success" type="submit" value="Edit" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to Patient List","Index") <!--isim, actionmethod-->
</div>