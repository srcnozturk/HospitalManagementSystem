@model List<Patient>

@{
    ViewBag.Title = "Index";
}
<head>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</head>
<h2>Patient List</h2>
<div>
    @Html.ActionLink("Create new patient", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Insurance</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>

            <tr>

                <td>@item.PatientFirstName</td>
                <td>@item.PatientLastName</td>
                <td>@item.PatientInsurance</td>
                <td>@item.PatientAddress</td>
                <td>@item.PatientPhone</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PatientId }, new { @class = "btn btn-success" })
                </td>
                <td>
                     @Html.ActionLink("Delete", "Delete", new { id = item.PatientId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    }
</table>
<br />
<span>@Model.Count show patient entries</span>